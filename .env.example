# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Authentication
AUTH_SECRET="your-auth-secret-here"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your-jwt-secret-here"

# File Upload
UPLOAD_DIR="./uploads"

# Email Configuration
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="Your App Name <your-email@gmail.com>"

# Speckle Configuration (Client-side accessible)
NEXT_PUBLIC_SPECKLE_TOKEN="your-speckle-token"
NEXT_PUBLIC_SPECKLE_SERVER_URL="https://app.speckle.systems"
NEXT_PUBLIC_SPECKLE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_SPECKLE_MODEL_ID="your-model-id"

# Autodesk Forge/APS Configuration
AUTODESK_CLIENT_ID="your-autodesk-client-id"
AUTODESK_CLIENT_SECRET="your-autodesk-client-secret"
AUTODESK_CALLBACK_URL="http://localhost:3000/api/autodesk/callback"
NEXT_PUBLIC_AUTODESK_CLIENT_ID="your-autodesk-client-id"

# Autodesk API URLs (usually don't need to change)
AUTODESK_AUTH_URL="https://developer.api.autodesk.com/authentication/v1/authenticate"
AUTODESK_API_BASE_URL="https://developer.api.autodesk.com"
NEXT_PUBLIC_AUTODESK_VIEWER_URL="https://developer.api.autodesk.com/modelderivative/v2/viewers/7.*/viewer3D.min.js"
NEXT_PUBLIC_AUTODESK_VIEWER_CSS="https://developer.api.autodesk.com/modelderivative/v2/viewers/7.*/style.min.css"

# ============================================
# Hikvision Camera Integration (View Site)
# ============================================

# Option 1: Hik-Connect Cloud API (Recommended for remote access)
# Register at https://open.hikvision.com/ to get these credentials
HIKVISION_APP_KEY="your-hikvision-app-key"
HIKVISION_APP_SECRET="your-hikvision-app-secret"
HIKVISION_API_URL="https://open.hik-connect.com"

# Option 2: Direct Camera Access (Local Network)
# Configure these in the camera settings within the app
# Example RTSP URL: rtsp://admin:password@192.168.1.64:554/Streaming/Channels/101

# RTSP to WebRTC Gateway (Required for browser playback of RTSP streams)
# Use go2rtc: https://github.com/AlexxIT/go2rtc
RTSP_GATEWAY_URL="http://localhost:8554"
